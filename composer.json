{
	"name": "mediawiki/parser-hooks",
	"description": "Adds a OOP and declarative parser hook interface on top of MediaWiki",
	"keywords": [
		"parserhooks",
		"mediawiki",
		"parser function",
		"parser hook",
		"tag extension"
	],
	"homepage": "https://github.com/JeroenDeDauw/ParserHooks/blob/master/README.md",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com",
			"role": "Developer"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/mediawiki"
	},
	"require": {
		"php": ">=5.3.0",
		"param-processor/param-processor": "~1.2"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor"
		]
	},
	"autoload": {
		"files" : [
			"ParserHooks.php"
		],
		"psr-4": {
			"ParserHooks\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.5.x-dev"
		}
	}
}
